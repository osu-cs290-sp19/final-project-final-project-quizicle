<body>

    {{> header}}

    <div class="content_container quiz_header">
        <h3 class="quiz_title">{{quiz.name}}</h3>
        <p class="num_count">{{quiz.card_count}} cards</p>
        <p class="quiz_description">{{quiz.description}}</p>
        <p class="quiz_date">Created {{quiz.creation_date}}.</p>
        <button type="button" class="practice_button" onclick="togglePracticeModal()">Practice</button>
    </div>

    <div class="content_container">
        <h4>Questions</h4>
    </div>

    <div class="full_width_contrast_container">
        <ul class="content_container card_container">
            {{#each quiz.cards}}
                {{> card}}
            {{/each}}
        </ul>
    </div>

    <div class="practice_quiz_container hidden">
        <div class="content_container practice_controls">

            <button onclick="flip()" class="practice_card_container">

                {{#each quiz.cards}}
                    {{> practice}}
                {{/each}}

            </button>

            <button type ="button" class ="modal_close_button" onclick="togglePracticeModal()"> Exit </button>

            <button type ="button" onclick = "previous()" class ="modal_button modal_previous_button"> < </button>
            <button type ="button" onclick = "next()" class ="modal_button modal_next_button"> > </button>

            <div class="card_counter">
                <p id="current_card"> questions </p> / {{quiz.card_count}} cards
            </div>

        </div>
    </div>

</body>
